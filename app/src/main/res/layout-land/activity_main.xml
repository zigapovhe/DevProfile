<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            android:contentDescription="banner image"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:contentDescription="logo image"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/cameraBtn"
            app:layout_constraintStart_toEndOf="@+id/povheTxt" app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintEnd_toStartOf="@+id/favBtn" app:layout_constraintTop_toTopOf="@+id/favBtn"
            app:layout_constraintBottom_toBottomOf="@+id/favBtn"
            app:layout_constraintHorizontal_chainStyle="packed" android:contentDescription="camera btn"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favBtn"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/msgBtn" app:layout_constraintTop_toTopOf="@+id/msgBtn"
            app:layout_constraintBottom_toBottomOf="@+id/msgBtn" android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" android:contentDescription="favorite btn"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/msgBtn"
            app:layout_constraintStart_toEndOf="@+id/favBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" android:contentDescription="message btn"/>
    <TextView
            android:text="Å½iga Povhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/povheTxt" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/banner" android:textSize="24sp"
            android:contentDescription="text"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/statsView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/logo"
            android:contentDescription="stats @android:string/VideoView_error_button" android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/codeView"
            android:contentDescription="image @android:string/VideoView_error_button" android:scaleType="centerCrop"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/codeView"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/videoView" app:layout_constraintTop_toTopOf="@id/imageView"
            android:contentDescription="video @android:string/VideoView_error_button" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.941"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/codeView"
            app:layout_constraintTop_toTopOf="@+id/statsView"
            android:contentDescription="code @android:string/VideoView_error_button" android:scaleType="centerCrop"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/statsView" android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>