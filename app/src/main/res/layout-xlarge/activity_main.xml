<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Povhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/povheTxt" android:textSize="32sp" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginStart="40dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/cameraBtn"
            app:layout_constraintStart_toEndOf="@+id/povheTxt" app:layout_constraintHorizontal_bias="0.77"
            app:layout_constraintEnd_toStartOf="@+id/favBtn" app:layout_constraintTop_toTopOf="@+id/favBtn"
            app:layout_constraintBottom_toBottomOf="@+id/favBtn"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favBtn"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/msgBtn" app:layout_constraintTop_toTopOf="@+id/msgBtn"
            app:layout_constraintBottom_toBottomOf="@+id/msgBtn" android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/msgBtn"
            app:layout_constraintStart_toEndOf="@+id/favBtn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/banner"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/codeView"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="32dp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintDimensionRatio="w,9:16" app:layout_constraintHorizontal_bias="1.0"
            android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/statsView"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/codeView" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,9:16"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:scaleType="centerCrop"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/codeView"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="w,9:16" app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/videoView"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/statsView" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,9:16"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Customize Dashboard"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/customBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#C6512F"
            android:textColor="@android:color/white" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>